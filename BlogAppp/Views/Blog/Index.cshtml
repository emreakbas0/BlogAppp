@model List<BlogAppp.Models.Blog>

@{
    ViewData["Title"] = "Bloglar";
    int? selectedCategoryId = null;
    var categoryIdStr = Context.Request.Query["categoryId"].ToString();
    if (!string.IsNullOrEmpty(categoryIdStr))
    {
        selectedCategoryId = int.Parse(categoryIdStr);
    }
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex justify-content-end">
                <select class="form-select w-auto" name="categoryId">
                    <option value="">Tümü</option>
                    @foreach (var category in (ViewBag.Categories as List<BlogAppp.Models.Category>) ?? new List<BlogAppp.Models.Category>())
                    {
                        <option value="@category.Id" selected="@(category.Id == selectedCategoryId ? "selected" : null)">@category.Name</option>
                    }
                </select>
                <button type="submit" class="btn btn-outline-primary ms-2">Filtrele</button>
            </form>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var blog in Model)
        {
            <div class="col">
                <div class="card h-100 shadow rounded-4">
                    <img src="@(!string.IsNullOrEmpty(blog.ImagePath) ? blog.ImagePath : "/images/default.jpg")"
                         class="card-img-top rounded-top-4"
                         style="height: 250px; object-fit: cover; object-position: top;"
                         alt="Blog Görseli" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@blog.Title</h5>
                        <p class="card-text">@{var contentPreview = blog.Content ?? string.Empty;
                            }
                            @(contentPreview.Length > 100 ? contentPreview.Substring(0, 100) + "..." : contentPreview)</p>
                        <a href="@Url.Action("Details", "Blog", new { id = blog.Id })" class="btn btn-primary mt-auto">Detaylar</a>

                        <button class="btn btn-outline-secondary mt-2" data-bs-toggle="modal" data-bs-target="#contentModal-@blog.Id">
                            İçeriği Gör
                        </button>
                    </div>
                </div>

                <div class="modal fade" id="contentModal-@blog.Id" tabindex="-1" aria-labelledby="contentModalLabel-@blog.Id" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content rounded-4">
                            <div class="modal-header">
                                <h5 class="modal-title" id="contentModalLabel-@blog.Id">@blog.Title</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p class="text-muted">
                                    <strong>Yazar:</strong> @(blog.AppUser?.UserName ?? "Bilinmiyor")<br />
                                    <strong>Kategori:</strong> @(blog.Category?.Name ?? "Kategori Yok")<br />
                                    <strong>Tarih:</strong> @blog.PublishDate.ToString("dd MMM yyyy")
                                </p>
                                <hr />
                                <p>@blog.Content</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>