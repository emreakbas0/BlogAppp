@model List<BlogAppp.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="mb-0">Kategoriler</h2>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        @foreach (var category in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">@category.Name</h5>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="card shadow-sm border-0 rounded-4 p-4">
            <h4 class="mb-3">Yeni Kategori Ekle</h4>
            <form asp-action="AddCategory" method="post">
                <div class="mb-3">
                    <input type="text" name="Name" class="form-control" placeholder="Kategori adı girin..." required />
                </div>
                <button type="submit" class="btn btn-success">Kategori Ekle</button>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">Yeni kategori eklemek için giriş yapmalısınız.</div>
    }
</div>
